/**
 * REQUIREMENTS
 * 1) `npm run typecheck` must NOT report errors from dependency declarations in `node_modules`.
 * 2) The project must support modern ECMAScript features used in this repo:
 *    - Top-level `await` in `rollup.config.ts`.
 *    - RegExp named capture groups in `src/util/packageName.ts`.
 * 3) Keep ESM-friendly bundler settings; TypeScript runs in type-checking mode only (no emit).
 * 4) Provide Node and Vitest globals during type-checks.
 * 5) Ensure compatibility with consumer projects using different TypeScript configurations.
 */
{
  "compilerOptions": {
    // [req-5] Use ES2020 for better consumer compatibility while maintaining modern features
    "target": "ES2020",
    "lib": ["ES2020", "ES2021.String", "DOM", "DOM.Iterable"],

    // [req-1] Do not type-check dependency .d.ts files (incl. node_modules).
    "skipLibCheck": true,

    // [req-5] Use Node resolution for better consumer compatibility
    "module": "ESNext",
    "moduleResolution": "bundler",

    // [req-5] Enable interop flags for better ESModule compatibility
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Existing settings retained to satisfy [req-3] and [req-4].
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    // [req-4] Test environment globals.
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"],
    // React JSX runtime
    "jsx": "react-jsx"
  },
  "exclude": ["coverage", "dist", "docs", "node_modules", "playground"],
  "include": ["src/**/*", "lib/**/*", "rollup.config.ts"]
}
